<% include header %> 
  <!-- =============================================== --> 
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <% 
         if (typeof message !== 'undefined' && message != '') { 
        %> 
        <div class="alert alert-success">
          <strong>Success!</strong> 
           <%= message  %>
        </div>
     <%             
          }
     %>
      <h1> 
        <small>it all starts here</small>
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Examples</a></li>
        <li class="active">Blank page</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">Category Form</h3>

          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button>
          </div>
        </div>
        <div class="box-body">
           
       <form action="/password-category" method="post">
          <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="Category Name" name="category_name">
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
            <p class="error"> 
            <% if (error.category_name) { %>
          <p>   <%= error.category_name.msg   %>  </p>
         <% } %> 
             </p>
          </div>
           
           
           
          <div class="row">  
            <div class="col-xs-4">
              <button type="submit" class="btn btn-primary btn-block btn-flat">Save</button>
            </div> 
          </div>
    </form> 


        </div>
        <!-- /.box-body -->
        <div class="box-footer">



               <div class="container">
  <h4>Product Category List</h4>            
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th> 
        <th> Action </th>
      </tr>
    </thead>
    <tbody>
      <% records.forEach(function(row){ %>
      <tr>
        <th><%= row.category_name %> </th> 
        <th> 
          <a href="/edit/<%= row._id %>"><i class="fa fa-ellipsis-h" aria-hidden="true"></i> </a>
          <a href="/password-category/delete/<%= row._id %>"><i class="fa fa-trash-o" aria-hidden="true"></i> </a>
        </th>
      </tr>
      <% }) %>

      <% if(records.lenght < 1) {
        %>
        <tr>
        <th>No Record Found</th>
</tr>
  <%  } %>  
       
     
    </tbody>
  </table> 
</div>

            
        </div>
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

  <!--  Footer -->

  <% include footer %> 